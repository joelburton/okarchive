<!doctype html>
<html>
<body>
<h1>${post.title}</h1>

<p>Back to
    <a href="${post.journal_name}">${post.journal_name}</a>
</p>

<form action="${action}" method="POST">
    <p>
        Title: <input type="text" name="title" value="${post.title}" />
    </p>

    <div>
        <textarea name="text" tal:content="post.text">[text]</textarea>
    </div>

    <input type="submit" name="form.Submitted" />
</form>

<i>${post.creation_date}</i>
</body>

</html>
