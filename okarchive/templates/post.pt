<metal:macro use-macro="load:main.pt">
    <metal:content fill-slot="content">

        <h1>${post.title}</h1>

        <p>Back to <a href="${journal_url}">${post.journal_name}</a></p>

        <div tal:content="structure post.text">[text]</div>

        <i>${post.creation_date}</i>

        <a href="${edit_url}">Edit post</a>

    </metal:content>
</metal:macro>